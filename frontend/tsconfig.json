{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    // Enable JSON imports.
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "strict": false, // for now
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "$lib/*": ["src/*"]
    }
  }
}
