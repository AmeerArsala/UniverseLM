---
interface Props {
  title: string;
  subtitle: string;
}

const { title = "Pricing Plans", subtitle = "Choose the plan that's right for you"} = Astro.props;
---

<section class="text-center">
  <h2 class="text-3xl font-bold">{title}</h2>
  <p class="text-xl pt-1">{subtitle}</p>
  <br />
</section>
