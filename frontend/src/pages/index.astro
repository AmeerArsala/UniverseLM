---
import DefaultLayoutWithHeader from '@layouts/DefaultLayoutWithHeader.astro';
import { FlipWords } from "@components/ui/flip-words";
import { SocietyGenerator } from './SocietyGenerator';
import CommunitiesViewer from '@components/CommunitiesViewer';

import Globe from '@components/Globe.astro';
import JoinTheWaitlist from './JoinTheWaitlist.svelte';
import Footer from "@components/Footer.svelte";

const attentionWords = ["Multi-Agent Systems", "Communities", "a Text Adventure", "a Knowledge Base", "a Storyline"];
---

<DefaultLayoutWithHeader title="UniverseLM">
  <!-- SCRIPTS -->
  <!-- IMPORTANT PAGE: UPDATE IMPORTANT VARIABLES  -->
  <script>
    import update from "$lib/scripts/updatestate";

    // updates important states
    await update();
  </script>

  <!-- PAGE -->
  <br/>
  <br/>

  <!-- HOOK ATTENTION GRABBER -->
  <p class="font-bold text-7xl text-center mb-12 mt-0 bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent inline ml-[27vw]">Simulate </p>
  <FlipWords words={attentionWords} className='font-bold text-7xl text-center mb-7 mt-3 bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text' client:only="react"/><br/>

  <!-- BEGINNING OF PROMISE (THE THING) -->
  <p class="mt-1 font-bold text-center text-2xl">Create communities of AI Agents right from your fingertips.</p>

  <!-- THE THING (DELIVER/EXCEED PROMISE) -->
  <SocietyGenerator client:load/>

  <!-- THE THING PART 2 (DELIVER/EXCEED PROMISE) -->
  <div class="flex flex-col justify-center">
    <p class="text-center text-2xl">...or join an existing one</p>
    <div class="font-inter min-w-[35vw] ml-auto mr-auto">
      <CommunitiesViewer client:only="svelte"/>
    </div>
  </div>

  <!-- YAP ABOUT WHY THIS IS SO GOOD -->
  <Globe>
    <h1 class="text-bold text-center font-bold text-4xl">UniverseLM is All You Need</h1>
  </Globe>

  <!-- JOIN WAITLIST -->
  <JoinTheWaitlist client:visible/>

  <!-- FOOTER -->
  <Footer />
</DefaultLayoutWithHeader>

<style>
  .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 285%;
		background-position: 0%;
	}
</style>
